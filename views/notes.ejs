<link rel="stylesheet" href="/stylesheets/output.css">
<div class="bg-gray-800 overflow-hidden">
<div class="mb-4 p-6  text-white shadow-md">
<a class="bg-green-500 hover:bg-green-600 px-4 py-2 rounded-md text-sm font-semibold cursor-pointer" href="/profile">Get Back To Profile</a></div>
<% posts.forEach(function(post) { %>
    <div class="mb-4 p-6 bg-zinc-900 text-white rounded-md shadow-md">
       
      
      <h4 class="text-blue-400 font-semibold text-lg">@<%= post.user.name %></h4>
      
    
      <p class="text-zinc-300 mt-2"><%= post.content %></p>
  

     
  
      <div class="mt-3 flex items-center gap-6 text-sm font-medium">
        <span class="text-gray-400">👍 <%= post.likes.length %> Likes</span>
  
        <% if (post.likes.includes(user.userid)) { %>
          <a href="/like/<%= post._id %>" class="text-red-400 hover:text-red-300 transition">
            👎 Unlike
          </a>
        <% } else { %>
          <a href="/like/<%= post._id %>" class="text-blue-400 hover:text-blue-300 transition">
            ❤️ Like
          </a>
        <% } %>
  
        <% if (post.user._id.toString() === user.userid) { %>
          <a href="/edit/<%= post._id %>" class="text-yellow-400 hover:text-yellow-300 transition">
            ✏️ Edit
          </a>
        <% } %>
      </div>
  
    </div>
  <% }); %>
  